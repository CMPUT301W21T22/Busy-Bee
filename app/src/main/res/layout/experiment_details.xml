<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <Button
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="10sp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/experiment_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Username"
        android:layout_marginLeft="5dp"
        android:textColor="@color/purple_500" />

    <TextView
        android:id="@+id/experiment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Experiment Name"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/experiment__trial_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Region"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/experiment_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Minimum trials"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/experiment_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Require Location"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/experiment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Experiment Type"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/experiment_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Experiment Status"
        android:layout_marginLeft="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/end_experiment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="End Experiment"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/experiment_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="View Trials"/>

        <Button
            android:id="@+id/experiment_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="View Map"/>

    </LinearLayout>

        <Button
            android:id="@+id/post_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a Comment" />


    <ListView
        android:id="@+id/post_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"/>


</LinearLayout>