<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/qrcode_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/qrcode_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/barcode_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode_button"
        android:windowSoftInputMode="adjustResize"
        android:padding="15dp" />

    <Button
        android:id="@+id/qrcode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode_image"
        android:layout_marginEnd="6dp"
        android:layout_centerHorizontal="true"
        android:text="Generate QR Code" />

    <Button
        android:id="@+id/barcode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode_button"
        android:layout_toRightOf="@+id/barcode_number"
        android:text="Generate Bar Code" />

    <ImageView
        android:id="@+id/barcode_image"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/barcode_number"/>


</RelativeLayout>